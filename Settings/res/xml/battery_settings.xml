    <AutoSwitchPreference android:title="@string/killer_title" maxlines="15" android:key="services" android:defaultValue="true" notify-script="false" runscript-on="/system/bin/enable_killer" runscript-off="/system/bin/disable_killer" needreboot="normal"/>
